@model CreateContactUsViewModel

@{
    ViewData["Tilte"] = "ContactUs";

    var Message = TempData["Data"] as OutPutModel<bool>;

}
<style>
    span{
        color:red;
    }
</style>
<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="box_1620">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-center">
                    <h2>Contact Us</h2>
                    <div class="page_link">
                        <a href="index.html">Home</a>
                        <a href="contact.html">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Contact Area =================-->
<section class="contact_area p_120">

    @if (Message is not null && Message.StatusCode==200)
    {
        <div class="alert alert-success">
            <p class="help-block"> با موفقیت انجام شد</p>
        </div>
    }

    <div class="row">
        <div class="col-lg-3">
            <div class="contact_info">
                <div class="info_item">
                    <i class="lnr lnr-home"></i>
                    <h6>Tehran,Iran</h6>
                    <p>Santa monica bullevard</p>
                </div>
                <div class="info_item">
                    <i class="lnr lnr-phone-handset"></i>
                    <h6><a href="#">(98) 09044018150</a></h6>
                    <p>Mon to Fri 9am to 6 pm</p>
                </div>
                <div class="info_item">
                    <i class="lnr lnr-envelope"></i>
                    <h6><a href="#">rezakazazy8@yahoo.com</a></h6>
                    <p>Send us your query anytime!</p>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <form class="row contact_form" asp-route="/contact-us" method="post" id="contactForm" novalidate="novalidate">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" id="name" asp-for="FirstName"  placeholder="Enter your first name">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="name" asp-for="LastName"  placeholder="Enter your last name">
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control"  asp-for="PhoneNumber"  placeholder="Enter your phone number">
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                  
                    <div class="form-group">
                        <input type="email" class="form-control" id="email" asp-for=Email name="email" placeholder="Enter email address">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="subject"  asp-for=Title placeholder="Enter Subject">
                        <span asp-validation-for="Title"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <textarea class="form-control"  id="message" asp-for=Description rows="1" placeholder="Enter Message"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class="col-md-12 text-right">
                    <button type="submit" value="submit" class="btn submit_btn">Send Message</button>
                </div>
            </form>
        </div>
    </div>
    </div>
</section>
<!--================Contact Area =================-->
