@{
	var userInfo = ViewData["Data"] as UserInfoViewModel;
} 
@inject IStatisticsService _StatisticsService;
<!--================Home Banner Area =================-->
<section class="banner_area">
	<div class="box_1620">
		<div class="banner_inner d-flex align-items-center">
			<div class="container">
				<div class="banner_content text-center">
					<h2>About Me</h2>
					<div class="page_link">
						<a href="index">Home</a>
						<a href="about">About Me</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!--================End Home Banner Area =================-->
<!--================Home Banner Area =================-->
<section class="profile_area">
	<div class="container">
		<div class="profile_inner p_120">
			<div class="row">
				<div class="col-lg-5">
					<img class="img-fluid" src="img/UserProfile/@userInfo.PictureName" width="500px" alt="">
				</div>
				<div class="col-lg-7">
					<div class="personal_text">
						<h6>Hello Everybody, i am</h6>
						<h3>@userInfo.FirstName @userInfo.LastName</h3>
						<h4> @userInfo.Position </h4>
						<p> @Html.Raw(userInfo.Bio)</p>
						<ul class="list basic_info">
							<li><a href="#"><i class="lnr lnr-calendar-full"></i> @userInfo.BirthDate.ToCustomString()</a></li>
							<li><a href="#"><i class="lnr lnr-phone-handset"></i> @userInfo.Phone </a></li>
							<li><a href="#"><i class="lnr lnr-envelope"></i> @userInfo.Email</a></li>
							<li><a href="#"><i class="lnr lnr-home"></i>@userInfo.Location</a></li>
						</ul>
						<ul class="list personal_social">
							<li><a href="https://github.com/REZAKAZAZI00"><i class="fa fa-github"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter"></i></a></li>
							<li><a href="https://www.linkedin.com/in/rezakazazi2002"><i class="fa fa-linkedin"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!--================End Home Banner Area =================-->
