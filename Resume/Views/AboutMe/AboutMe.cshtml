					<div class="row">
						<div class="col-md-4">
							<div class="wel_item">
								<i class="lnr lnr-database"></i>
								<h4>2</h4>
								<p>Total Donation</p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="wel_item">
								<i class="lnr lnr-book"></i>
								<h4>@await _StatisticsService.GetToTotalProjectsAsync()</h4>
								<p>Total Projects</p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="wel_item">
								<i class="lnr lnr-users"></i>
								<h4>3</h4>
								<p>Total Volunteers</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-6">
				@await Component.InvokeAsync("Skills")
