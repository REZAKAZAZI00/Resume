@model UpdateSkillsViewModel
@{
    ViewData["Title"] = "Create Skill";
    var result = ViewData["result"] as OutPutModel<bool>;
}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3"></h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    Dashboard
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Skills</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Update Skill</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                @if (result != null)
                {
                    if (result.StatusCode.Equals(200))
                    {
                        <div class="alert alert-success" id="alert_demo_3_1">
                            <p class="help-block">@result.Message</p>
                        </div>


                    }
                    else if (result.StatusCode.Equals(404))
                    {
                        <div class="alert alert-warning">
                            <p class="help-block">@result.Message</p>
                        </div>

                    }
                    else if (result.StatusCode.Equals(500))
                    {
                        <div class="alert alert-danger">
                            <p class="help-block">@result.Message</p>
                        </div>
                    }
                }
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Create Skill </div>
                    </div>


                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8 col-lg-6">
                                <form asp-action="update" method="post">
                                    <input type="hidden" asp-for="SkillsId" /> 
                                    <div class="form-group">
                                        <label for="email2">Skill Name</label>
                                        <input type="text"
                                               class="form-control"
                                               id="email2"
                                               asp-for="Name" />

                                    </div>
                                    <div class="form-group">
                                        <label for="email2">Level Skill </label>
                                        <input type="number"
                                               class="form-control"
                                               id="email2"
                                               min="0"
                                               max="100"
                                               asp-for="Level" />
                                        <small id="emailHelp2" class="form-text text-muted">
                                            Level between 0 and 100
                                        </small>
                                    </div>


                                    <div class="card-action">
                                        <button class="btn btn-success">Submit</button>

                                    </div>

                                </form>


                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
