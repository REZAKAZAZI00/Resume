@model OutPutModel<FilterContactUsViewModel>
@{
    ViewData["Title"] = "List ContactUs";
}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Dashboard</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">ContantUs</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">ContantUs</a>
                </li>
            </ul>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                        
                        </div>
                    </div>
                    <div class="card-header">
                        <div class="header">
                            <h2>
                                Fillter
                            </h2>
                        </div>
                        <div class="body">
                            <form method="get" asp-route="/admin/users" id="filter-search">
                                <input type="hidden" asp-for="Result.Page" />
                                <div class="row clearfix">
                                    <div class="col-sm-12  col-md-4">
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                <input type="text" class="form-control" asp-for="Result.Email">
                                                <label class="form-label" asp-for="Result.Email"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4">
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                <input type="text" class="form-control" asp-for="Result.Phone">
                                                <label class="form-label" asp-for="Result.Phone"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <button class="btn btn-success">Search</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Modal -->
                       
                        <div class="table-responsive">
                            @if (Model.Result != null &&Model.StatusCode==200
                            &&Model.Result.Entities != null && Model.Result.Entities.Any())
                            {
                                <table id="add-row"
                                       class="display table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Phone Number</th>
                                            <th>Email</th>
                                            <th>Title</th>
                                            <th style="width: 10%">Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Phone Number</th>
                                            <th>Email</th>
                                            <th>Title</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model.Result.Entities)
                                        {
                                            <tr>
                                                <td>@item.FirstName @item.LastName </td>
                                                <td>@item.Description </td>
                                                <td>@item.PhoneNumber</td>
                                                <td>@item.Email</td>
                                                <td>@item.Title</td>

                                                <td>
                                                    <div class="form-button-action">
                                                        <a href="/admin/contactus/Details/@item.Id">
                                                            <button type="button"
                                                                    data-bs-toggle="tooltip"
                                                                    title=""
                                                                    class="btn btn-link btn-primary btn-lg"
                                                                    data-original-title="Details">
                                                                <i class="fa fa-edit"></i>
                                                            </button>
                                                        </a>
                                                       
                                                    </div>
                                                </td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                                <partial name="_AdminPagination" model="@Model.Result.GetCurrentPaging()" />

                            }
                            else
                            {
                                <partial name="_AdminNotFound" />

                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>
</div>