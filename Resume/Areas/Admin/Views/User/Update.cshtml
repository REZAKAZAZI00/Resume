@model EditUserViewModel
@{

}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3"></h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    Dashboard
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Users</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Edit User</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Edit User </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8 col-lg-6">
                                <form asp-action="edit" method="post">
                                    <input type="hidden" asp-for="Id" />
                                  

                                    <div class="form-group">
                                        <label for="email2">FirstName</label>
                                        <input type="text"
                                               class="form-control"
                                               id="email2"
                                               asp-for="FirstName" />

                                    </div>
                                    <div class="form-group">
                                        <label for="email2">LastName</label>
                                        <input type="text"
                                               class="form-control"
                                               id="email2"
                                               asp-for="LastName" />

                                    </div>
                                    <div class="form-group">
                                        <label for="email2">PhoneNumber</label>
                                        <input type="text"
                                               class="form-control"
                                               id="email2"
                                               asp-for="Phone" />

                                    </div>
                                    <div class="form-group">
                                        <label for="email2">BirthDate</label>
                                        <input type="date"
                                               class="form-control"
                                               id="email2"
                                               asp-for="BirthDate" />

                                    </div>
                                    <div class="form-group">
                                        <label for="email2">Email </label>
                                        <input type="email" class="form-control" asp-for="Email" />

                                    </div>

                                   
                                    <div class="card-action">
                                        <button class="btn btn-success">Submit</button>
                                        
                                    </div>

                                </form>


                            </div>



                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
